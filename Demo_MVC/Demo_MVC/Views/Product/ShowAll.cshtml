@model List<Product>

<table>
	<tbody>
		@foreach(Product item in Model)
		{
			<tr>
				<td>@item.Id</td>
				<td>@item.Name</td>
				<td>@item.Description</td>
				<td>@item.Price</td>
				<td><img src="/Images/@item.Image" /></td>
				<td><a href="/product/details/@item.Id">Click Here</a></td>
			</tr>
		}
	</tbody>
</table>
