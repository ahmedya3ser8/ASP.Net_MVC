@model Department

<h1 style="margin-bottom:10px; padding:5px;">Add New Department</h1>

<form method="post" action="/Department/SaveNew">
	<div>
		<label>Name</label>
		<input type="text" class="form-control" name="Name" value="@Model.Name" />
	</div>
	<div>
		<label>ManagerName</label>
		<input type="text" class="form-control" name="ManagerName" value="@Model.ManagerName" />
	</div>
	<input type="submit" value="Add" class="btn btn-success" />
</form>

<a href="/Department/Index">Back To List</a>
